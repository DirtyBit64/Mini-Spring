<?xml version="1.0" encoding="UTF-8" ?>

<beans>
    <bean id = "aservice" class = "com.minis.Impl.AServiceImpl">
        <property type="String" name="property1" value="Tommy say: "/>
        <property type="String" name="property2" value="Hello World!"/>
        <constructor-arg type="String" name="name" value="Tommy"/>
        <constructor-arg type="int" name="level" value="10"/>
        <!-- 注入bean的类路径一定要对应setter -->
        <property type="com.minis.BaseService" name="ref1" ref="baseservice"/>
    </bean>

    <bean id="basebaseservice" class="com.minis.Impl.BasebaseServiceImpl">
        <property type="com.minis.AService" name="as" ref="aservice" />
    </bean>

    <bean id="baseservice" class="com.minis.Impl.BaseServiceImpl">
        <property type="com.minis.BasebaseService" name="bbs" ref="basebaseservice" />
    </bean>

</beans>